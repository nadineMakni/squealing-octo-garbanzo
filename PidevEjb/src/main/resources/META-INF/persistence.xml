<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="gestionDeals">
		<jta-data-source>java:/MySqlDS</jta-data-source>
		<class>edu.esprit.pidev.ClientD</class>
		<class>edu.esprit.pidev.Deal</class>
		<class>edu.esprit.pidev.Product</class>
		<class>edu.esprit.pidev.entities.Client</class>
		<class>edu.esprit.pidev.entities.Offre</class>
		<class>edu.esprit.pidev.entities.Produit</class>

		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>
